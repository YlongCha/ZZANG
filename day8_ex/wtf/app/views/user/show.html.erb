
<h2> 글확인 화면. </h2>
<form  action="/user/list">
  <div class="form-group">
    <label>작성자</label>
    <input value = "<%=@post.username%>" name="username" type="text" class="form-control">
  </div>
  <div class="form-group">
    <label>제목</label>
    <input value = "<%=@post.title%>" name="title" type="text" class="form-control">
  </div>
  <div class="form-group">
    <label>내용</label>
    <textarea name="content" class="form-control" rows="3"><%=@post.content%></textarea>
  </div>
  <button type="submit" class="btn btn-primary">확인</button>
</form>
<% @post.comments.each do |comment|%>
<%= comment.id %>
<%= comment.content %>
<% end %>

<h4>댓글입력</h4>
<form action = "/user/add_comment">
  <input type = "text" name="comments" placeholder="댓글을 입력하세요" />
  <input type = "hidden" name="id" value="<%= @post.id %>">
  <input type="submit" />
</form>
